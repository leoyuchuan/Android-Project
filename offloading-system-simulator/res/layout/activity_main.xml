<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ossimulator.offloadingos.Main" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="85"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/labelLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log:" />

        <EditText
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:autoText="false"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:freezesText="true"
            android:inputType="textMultiLine"
            android:longClickable="false"
            android:password="false"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="10sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5" >

        <TextView
            android:id="@+id/labelTaskNum"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Task Num:"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/taskNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:text="1"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5" >

        <TextView
            android:id="@+id/labelCpuNum"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="CPU Core:"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/cpuNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:text="1"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5" >

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Start"
            android:textSize="12sp"
            android:onClick="start" />

        <Button
            android:id="@+id/btnEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="End"
            android:textSize="12sp"
            android:onClick="end" />

    </LinearLayout>

</LinearLayout>